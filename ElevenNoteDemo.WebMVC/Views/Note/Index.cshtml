@model IEnumerable<ElevenNoteDemo.Models.NoteListItem>

@{
    ViewBag.Title = "Notes";
    var categories = ViewBag.Categories as IEnumerable<ElevenNoteDemo.Models.CategoryModels.CategoryListItem>;
}

<h2>Notes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#catAll">All Notes</a></li>
    @for (int i = 0; i < categories.Count(); i++)
    {
        var category = categories.ElementAt(i);
        <li>
            <a data-toggle="tab" href="#cat@(category.CategoryId)">@category.Name</a>
        </li>
    }
    <li><a data-toggle="tab" href="#tab2">Tab 2</a></li>
</ul>

<div class="tab-content">
    <div id="catAll" class="tab-pane fade in active">
        <div class="note-board">
            @foreach (var item in Model)
            {
                <div class="card-container col-md-3 col-sm-6">
                    <div class="note-card">
                        <div class="note-head">
                            @Html.ActionLink(item.Title, "Details", new { id = item.NoteId })
                            @Html.DisplayFor(modelItem => item.IsStarred)
                        </div>
                        <div class="note-body">
                            <div class="note-category text-center">
                                @Html.DisplayFor(modelItem => item.Category)

                            </div>
                            <div>
                                @Html.DisplayFor(modelItem => item.Content)

                            </div>
                            <div class="note-created">
                                @Html.DisplayFor(modelItem => item.CreatedUtc)
                            </div>
                            <div class="note-tools">
                                <a href="/Note/Edit/@item.NoteId"><img src="~/Content/Assets/Edit.png" /></a>

                                @Html.ActionLink("Delete", "Delete", new { id = item.NoteId })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    @for (int i = 0; i < categories.Count(); i++)
    {
        var category = categories.ElementAt(i);
        <div id="cat@(category.CategoryId)" class="tab-pane fade">
            <div class="note-board">
                @foreach (var item in Model.Where(e => e.CategoryId == category.CategoryId))
                {
                    <div class="card-container col-md-3 col-sm-6">
                        <div class="note-card">
                            <div class="note-head">
                                @Html.ActionLink(item.Title, "Details", new { id = item.NoteId })
                                @Html.DisplayFor(modelItem => item.IsStarred)
                            </div>
                            <div class="note-body">
                                <div class="note-category text-center">
                                    @Html.DisplayFor(modelItem => item.Category)

                                </div>
                                <div>
                                    @Html.DisplayFor(modelItem => item.Content)

                                </div>
                                <div class="note-created">
                                    @Html.DisplayFor(modelItem => item.CreatedUtc)
                                </div>
                                <div class="note-tools">
                                    <a href="/Note/Edit/@item.NoteId"><img src="~/Content/Assets/Edit.png" /></a>

                                    @Html.ActionLink("Delete", "Delete", new { id = item.NoteId })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    }
</div>

